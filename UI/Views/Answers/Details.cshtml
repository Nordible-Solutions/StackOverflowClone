        </div>

        <div class="postWiki" style="">

            @Model.answer.A_Wiki

        </div>

        <div class="postOptions-horizontal" style="">

            <div class="Votes" style="" title="This post earned @Model.answer.A_MarksEarned marks">

                <a href="/posts/postMarks?returnUrl=@ViewContext.HttpContext.Request.Url.PathAndQuery&MarksType=1&postId=@Model.answer.AnswerId&postType=@Model.answer.postType&postBy=@Model.answer.A_By">
                    <i class="fa fa-chevron-circle-up" title="This post is useful"></i>
                </a>

                <div>
                    @Model.answer.A_MarksEarned
                </div>

                <a href="/posts/postMarks?returnUrl=@ViewContext.HttpContext.Request.Url.PathAndQuery&MarksType=-1&postId=@Model.answer.AnswerId&postType=@Model.answer.postType&postBy=@Model.answer.A_By">
                    <i class="fa fa-chevron-circle-down" title="Click to mark this as not useful"></i>
                </a>

            </div>

            <div class="Author">

                <a href="/Account/UserProfileByUserName?UserName=@Model.answer.A_ByUname" title="Author">
                    by @Model.answer.A_ByUname
                </a>

                <span title="Total marks scored"> @Model.answer.A_ByMarksScore </span>
