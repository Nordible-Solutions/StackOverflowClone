        <div class="postTitle" style="">

            <a title="Click to view this post in full screen" href="/Answers/Details?AnswerId=@Model.answer.AnswerId" class="title">
                @Model.answer.A_Title
            </a>

        </div>

        <div class="postOptions-vertical" style="">
